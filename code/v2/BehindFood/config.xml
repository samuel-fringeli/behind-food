<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.behindfood" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BehindFood</name>
    <description>
        Behind food is a mobile application used in an exhibition on sustainable development. It allows visitors to explore the hidden sides of different everyday foods through a journey of various themes related to these foods.
    </description>
    <author email="to add" href="to add">
        Fringeli Samuel. Geinoz Gr√©gory
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="orientation" value="landscape" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <allow-intent href="market:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="mdpi" foreground="res/icon/android/mdpi.png" />
        <icon background="@color/background" density="hdpi" foreground="res/icon/android/hdpi.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/icon/android/xhdpi.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/icon/android/xxhdpi.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/icon/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <preference name="orientation" value="landscape" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon/ios/180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/60.png" width="60" height="60" />
        <icon src="res/icon/ios/120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/76.png" width="76" height="76" />
        <icon src="res/icon/ios/152.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/40.png" width="40" height="40" />
        <icon src="res/icon/ios/80.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/ios/57.png" width="57" height="57" />
        <icon src="res/icon/ios/114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/ios/72.png" width="72" height="72" />
        <icon src="res/icon/ios/144.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="res/icon/ios/167.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/29.png" width="29" height="29" />
        <icon src="res/icon/ios/58.png" width="58" height="58" />
        <icon src="res/icon/ios/87.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/ios/50.png" width="50" height="50" />
        <icon src="res/icon/ios/100.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="res/icon/ios/167.png" width="167" height="167" />
        <!-- iTunes Marketing Image -->
        <icon src="res/icon/ios/1024.png" width="1024" height="1024" />
    </platform>
</widget>
